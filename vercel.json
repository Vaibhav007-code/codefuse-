{
  "version": 2,
  "builds": [
    {
      "src": "api/proxy.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/proxy.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*).(js|css|json|ico|png)",
      "dest": "/build/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "/build/index.html"
    }
  ]
}